@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@{
    Layout = "_CustomLayout";
}

<link rel="stylesheet" href="~/css/Landing.css" />

<div class="leftlogo"> </div>

<div class="bgimg-1">
    <div class="caption">
       
    </div>
</div>
<div class="container" style="position:absolute;top:0">
    <div class="row">
        <div class="formarea">
            <div class="col-md-8 col-sm-8 col-xs"></div>
            <div class="col-md-4 col-sm-4">
                <div class="Heading" style="margin-top:50px">
                    <h1>Admin Login</h1>
                    <small>Welcome ! Please Login to your Account</small>
                </div>
                <section>
                    <div class="inputArea" style="margin-top:15px">
                    <form id="account" method="post">
                       
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox-inline">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <a id="forgot-password" class="pull-right" asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>
                        
                  
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Log in</button>
                            </div>
                            @*<p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>*@
                        
                    </form>
</div>
                </section>
            </div>

